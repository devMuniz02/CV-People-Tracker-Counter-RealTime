{
    "detection": {
        "method": "dnn",
        "haar_cascade_file": "haarcascade_frontalface_default.xml",
        "scale_factor": 1.05,
        "min_neighbors": 8,
        "min_size": [80, 80],
        "dnn_model_path": "models/face_detection_model.caffemodel",
        "dnn_config_path": "models/face_detection_model.prototxt",
        "confidence_threshold": 0.7
    },
    "tracking": {
        "max_disappeared_frames": 45,
        "max_distance_threshold": 80,
        "tracker_type": "centroid"
    },
    "session": {
        "duration_minutes": 15,
        "location": "Biblioteca UDEM",
        "fps_limit": 25,
        "save_full_frames": true,
        "save_face_crops": true
    },
    "preprocessing": {
        "resize_width": 800,
        "apply_blur": true,
        "blur_kernel_size": 3,
        "apply_clahe": true
    },
    "output": {
        "base_path": "output",
        "log_format": "csv",
        "image_quality": 90
    }
}